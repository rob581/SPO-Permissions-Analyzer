<!-- Views/DeepDive/SitesDeepDive.xaml -->
<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sites Deep Dive Analysis" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#0078D4" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ¢" FontSize="24" Foreground="White" Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="Sites Deep Dive Analysis" 
                                  FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Name="txtSiteCount" Text="Analyzing 0 sites" 
                                  FontSize="12" Foreground="White" Opacity="0.9"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Name="btnRefreshData" Content="ðŸ”„ Refresh" 
                           Width="100" Height="30" Margin="0,0,10,0"
                           Background="#28A745" Foreground="White" FontWeight="SemiBold"/>
                    <Button Name="btnExport" Content="ðŸ“Š Export" 
                           Width="100" Height="30"
                           Background="#17A2B8" Foreground="White" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Summary Stats -->
        <Border Grid.Row="1" Background="#F8F9FA" BorderBrush="#E9ECEF" 
               BorderThickness="0,0,0,1" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Total Storage -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="Total Storage" FontSize="11" Foreground="#6C757D"/>
                    <TextBlock Name="txtTotalStorage" Text="0 GB" FontSize="20" 
                              FontWeight="Bold" Foreground="#495057"/>
                </StackPanel>
                
                <!-- Average Storage -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="Avg Storage/Site" FontSize="11" Foreground="#6C757D"/>
                    <TextBlock Name="txtAvgStorage" Text="0 MB" FontSize="20" 
                              FontWeight="Bold" Foreground="#495057"/>
                </StackPanel>
                
                <!-- Hub Sites -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="Hub Sites" FontSize="11" Foreground="#6C757D"/>
                    <TextBlock Name="txtHubSites" Text="0" FontSize="20" 
                              FontWeight="Bold" Foreground="#007ACC"/>
                </StackPanel>
                
                <!-- Sites with Unique Permissions -->
                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="Unique Permissions" FontSize="11" Foreground="#6C757D"/>
                    <TextBlock Name="txtUniquePermissions" Text="0" FontSize="20" 
                              FontWeight="Bold" Foreground="#FFC107"/>
                </StackPanel>
                
                <!-- Last Modified -->
                <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                    <TextBlock Text="Recently Modified" FontSize="11" Foreground="#6C757D"/>
                    <TextBlock Name="txtRecentlyModified" Text="0" FontSize="20" 
                              FontWeight="Bold" Foreground="#28A745"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <TabControl Grid.Row="2" Margin="10">
            
            <!-- Detailed Sites List Tab -->
            <TabItem Header="ðŸ“‹ Detailed Sites List">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Search and Filter Bar -->
                    <Border Grid.Row="0" Background="White" BorderBrush="#E9ECEF" 
                           BorderThickness="1" Padding="10" Margin="0,0,0,10" CornerRadius="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Search Box -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,10,0">
                                <TextBlock Text="ðŸ”" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Name="txtSearch" Width="250" Height="25" 
                                        VerticalContentAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Template Filter -->
                            <ComboBox Grid.Column="1" Name="cboTemplateFilter" Height="25" Margin="0,0,10,0">
                                <ComboBoxItem Content="All Templates" IsSelected="True"/>
                                <ComboBoxItem Content="Team Sites"/>
                                <ComboBoxItem Content="Communication Sites"/>
                                <ComboBoxItem Content="Hub Sites"/>
                            </ComboBox>
                            
                            <!-- Storage Filter -->
                            <ComboBox Grid.Column="2" Name="cboStorageFilter" Height="25">
                                <ComboBoxItem Content="All Storage Levels" IsSelected="True"/>
                                <ComboBoxItem Content="Low (Less than 500 MB)"/>
                                <ComboBoxItem Content="Medium (500-1000 MB)"/>
                                <ComboBoxItem Content="High (1-2 GB)"/>
                                <ComboBoxItem Content="Critical (More than 2 GB)"/>
                            </ComboBox>
                        </Grid>
                    </Border>
                    
                    <!-- Sites DataGrid -->
                    <DataGrid Grid.Row="1" Name="dgDetailedSites" AutoGenerateColumns="False" 
                             CanUserSortColumns="True" GridLinesVisibility="Horizontal"
                             AlternatingRowBackground="#F8F9FA" RowHeight="35">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Site Title" Binding="{Binding Title}" Width="200"/>
                            <DataGridTextColumn Header="URL" Binding="{Binding Url}" Width="250"/>
                            <DataGridTextColumn Header="Owner" Binding="{Binding Owner}" Width="150"/>
                            <DataGridTextColumn Header="Storage (MB)" Binding="{Binding Storage}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Template" Binding="{Binding Template}" Width="120"/>
                            <DataGridTextColumn Header="Last Modified" Binding="{Binding LastModified}" Width="100"/>
                            <DataGridTemplateColumn Header="Hub Site" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding IsHubSite}" HorizontalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsHubSite}" Value="True">
                                                            <Setter Property="Text" Value="âœ“"/>
                                                            <Setter Property="Foreground" Value="Green"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsHubSite}" Value="False">
                                                            <Setter Property="Text" Value=""/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            
            <!-- Storage Analysis Tab -->
            <TabItem Header="ðŸ’¾ Storage Analysis">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="250"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Storage Chart -->
                    <Border Grid.Row="0" Background="White" BorderBrush="#E9ECEF" 
                           BorderThickness="1" Padding="15" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Storage Distribution by Site" FontSize="14" 
                                      FontWeight="Bold" Margin="0,0,0,10"/>
                            <Canvas Name="canvasStorageDistribution" Height="180" Background="#FAFAFA"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Top Storage Consumers -->
                    <Border Grid.Row="1" Background="White" BorderBrush="#E9ECEF" 
                           BorderThickness="1" Padding="15" Margin="0,10,0,0" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Top Storage Consumers" FontSize="14" 
                                      FontWeight="Bold" Margin="0,0,0,10"/>
                            <DataGrid Name="dgTopStorage" Height="200" AutoGenerateColumns="False" 
                                     GridLinesVisibility="None" IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Rank" Binding="{Binding Rank}" Width="50"/>
                                    <DataGridTextColumn Header="Site" Binding="{Binding Title}" Width="*"/>
                                    <DataGridTextColumn Header="Storage (MB)" Binding="{Binding Storage}" Width="100"/>
                                    <DataGridTextColumn Header="% of Total" Binding="{Binding Percentage}" Width="100"/>
                                    <DataGridTemplateColumn Header="Visual" Width="150">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ProgressBar Value="{Binding PercentageValue}" 
                                                           Maximum="100" Height="15" 
                                                           Foreground="{Binding BarColor}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Site Health Tab -->
            <TabItem Header="ðŸ¥ Site Health">
                <ScrollViewer Margin="10">
                    <StackPanel>
                        <!-- Health Summary -->
                        <Border Background="White" BorderBrush="#E9ECEF" 
                               BorderThickness="1" Padding="15" Margin="0,0,0,10" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Site Health Summary" FontSize="14" 
                                          FontWeight="Bold" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Healthy Sites -->
                                    <Border Grid.Column="0" Background="#E8F5E9" Padding="10" 
                                           Margin="0,0,5,0" CornerRadius="5">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="âœ…" FontSize="24"/>
                                            <TextBlock Name="txtHealthySites" Text="0" FontSize="20" 
                                                      FontWeight="Bold" Foreground="#2E7D32"/>
                                            <TextBlock Text="Healthy Sites" FontSize="11"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Warning Sites -->
                                    <Border Grid.Column="1" Background="#FFF3E0" Padding="10" 
                                           Margin="5,0,5,0" CornerRadius="5">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="âš ï¸" FontSize="24"/>
                                            <TextBlock Name="txtWarningSites" Text="0" FontSize="20" 
                                                      FontWeight="Bold" Foreground="#F57C00"/>
                                            <TextBlock Text="Need Attention" FontSize="11"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Critical Sites -->
                                    <Border Grid.Column="2" Background="#FFEBEE" Padding="10" 
                                           Margin="5,0,0,0" CornerRadius="5">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="ðŸš¨" FontSize="24"/>
                                            <TextBlock Name="txtCriticalSites" Text="0" FontSize="20" 
                                                      FontWeight="Bold" Foreground="#C62828"/>
                                            <TextBlock Text="Critical Issues" FontSize="11"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Health Issues List -->
                        <Border Background="White" BorderBrush="#E9ECEF" 
                               BorderThickness="1" Padding="15" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Health Issues and Recommendations" FontSize="14" 
                                          FontWeight="Bold" Margin="0,0,0,10"/>
                                <ListBox Name="lstHealthIssues" Height="250" BorderThickness="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="10" Margin="0,2" CornerRadius="5" 
                                                   Background="{Binding SeverityColor}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="30"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding Icon}" 
                                                              FontSize="16" VerticalAlignment="Top"/>
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding Site}" FontWeight="Bold" 
                                                                  Foreground="White"/>
                                                        <TextBlock Text="{Binding Issue}" Foreground="White" 
                                                                  TextWrapping="Wrap" Margin="0,2"/>
                                                        <TextBlock Text="{Binding Recommendation}" 
                                                                  Foreground="White" Opacity="0.9" 
                                                                  FontStyle="Italic" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#F8F9FA" BorderBrush="#E9ECEF" 
               BorderThickness="0,1,0,0" Padding="10">
            <Grid>
                <TextBlock Name="txtStatus" Text="Ready" FontSize="11" 
                          Foreground="#6C757D" HorizontalAlignment="Left"/>
                <TextBlock Name="txtLastUpdate" Text="Last updated: Never" FontSize="11" 
                          Foreground="#6C757D" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Window>